<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/MyThemeWidget</item>
    </style>

    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/my_primary_dark</item>

        <item name="android:backgroundStacked">@color/my_primary_light</item>
        <!--<item name="android:backgroundSplit">@color/c_blue_light</item>-->
    </style>

    <!-- settings menu: popup background-->
    <style name="MyPopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/my_primary_dark</item>
    </style>

    <style name="MyThemeWidget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
    </style>

    <!-- transparent theme -->

    <style name="AppThemeTransparent" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/MyThemeWidget</item>
    </style>

    <style name="MyActionBarTrans"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/my_primary_dark_transparent</item>

        <item name="android:backgroundStacked">@color/my_primary_light_transparent</item>
        <!--<item name="android:backgroundSplit">@color/c_blue_light</item>-->
    </style>


    <!-- settings menu: popup background-->
    <style name="MyPopupMenuTrans" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@color/my_primary_dark_transparent</item>
    </style>

    <style name="MyThemeWidgetTrans" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
    </style>

</resources>
